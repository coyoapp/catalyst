{
  "name": "catalyst",
  "private": true,
  "scripts": {
    "prepare": "node ./prepare.js",
    "postinstall": "patch-package",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "build": "npm run build -w tokens && npm run build -w core && npm run build catalyst -w angular && npm run build catalyst-formly -w angular && npm run build -w react",
    "replace": "node replace.js",
    "publish": "npm publish -w tokens && npm publish -w core && cd angular/dist/catalyst && npm publish && cd ../catalyst-formly && npm publish && cd ../../.. && npm publish -w react",
    "clean": "npm run clean -ws --if-present",
    "reset": "npm run reset -ws --if-present && rm -rf ./node_modules"
  },
  "workspaces": [
    "angular",
    "angular/projects/catalyst",
    "angular/projects/catalyst-formly",
    "core",
    "react",
    "tokens",
    "vue"
  ],
  "standard-version": {
    "packageFiles": [
      "./angular/projects/catalyst/package.json",
      "./angular/projects/catalyst-formly/package.json",
      "./core/package.json",
      "./react/package.json",
      "./tokens/package.json"
    ],
    "bumpFiles": [
      "./package-lock.json",
      "./angular/projects/catalyst/package.json",
      "./angular/projects/catalyst-formly/package.json",
      "./core/package.json",
      "./react/package.json",
      "./tokens/package.json"
    ]
  },
  "engines": {
    "pnpm": ">=8.0.0",
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "husky": "^8.0.3",
    "patch-package": "^6.5.1",
    "replace-in-file": "^7.0.1",
    "standard-version": "^9.3.2"
  }
}
