{
  "name": "@haiilo/catalyst",
  "version": "3.0.2",
  "description": "Catalyst Design System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haiilo/catalyst.git"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/catalyst/catalyst.esm.js",
  "customElements": "dist/custom-elements/custom-elements.json",
  "files": [
    "dist/",
    "loader/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "stencil build --docs",
    "build:ci": "stencil build --ci",
    "postbuild": "node replace",
    "postbuild:ci": "node replace",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:style": "stylelint **/*.scss",
    "clean": "rm -rf ./dist ./loader ./www",
    "reset": "rm -rf ./dist ./loader ./www ./node_modules"
  },
  "peerDependencies": {
    "@haiilo/catalyst-icons": ">=0.3.10",
    "rxjs": "^7.5.5"
  },
  "dependencies": {
    "@floating-ui/dom": "1.0.3",
    "@haiilo/catalyst-tokens": "3.0.2",
    "@stencil/core": "2.17.4",
    "autosize": "5.0.1",
    "autosize-input": "1.0.2",
    "focus-trap": "7.0.0",
    "loglevel": "1.8.0",
    "sanitize.css": "13.0.0",
    "toastify-js": "1.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@haiilo/catalyst-icons": "^0.3.16",
    "@stencil/angular-output-target": "^0.4.0",
    "@stencil/react-output-target": "^0.3.1",
    "@stencil/sass": "^2.0.0",
    "@stencil/vue-output-target": "^0.6.1",
    "@types/autosize": "^4.0.1",
    "@types/jest": "^27.5.1",
    "@types/toastify-js": "^1.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "babel-loader": "^8.2.3",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "prettier": "^2.7.1",
    "puppeteer": "^19.5.2",
    "replace-in-file": "^6.3.5",
    "rxjs": "^7.5.5",
    "stylelint": "^14.14.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^6.0.0",
    "typescript": "^4.5.5"
  }
}
